<div class="container">
    <main role="main" class="pb-3">

        <h1>Register</h1>

        </main>

</div>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post" action="Add" novalidate="novalidate">
            <h4>Create a new account.</h4>
            <hr>

            <div class="form-group">
                <label for="Input_Email">Email</label>
                <input class="form-control" autocomplete="username" type="email" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." id="Input_Email" name="Email" value="" required>
                <span class="text-danger field-validation-valid" data-valmsg-for="Input.Email" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="Input_Password">Password</label>
                <input class="form-control" name="password" type="password" placeholder="Password" id="password" required />
            </div>

            <div class="form-group">
                <label for="gender">Gender:</label>
                <label> Male</label>
                <input type="radio" id="male" name="gender" value="Male" checked required />
                <label> Female</label>
                <input type="radio" id="female" name="gender" value="Female" />
            </div>
            <div class="form-group">
                <label for="date">Date of Birth</label>
                <input type="date" name="dateofbirth" id="date" required />
            </div>
            <div class="form-group">
                <label for="interests">Interests</label>
                <input type="text" name="interests" id="interests" required />
            </div>
            <div class="form-group">
                <label for="phonenumber">Phone Number: </label>
                <input type="tel" name="phonenumber" id="phonenumber" required />
            </div>
            <div class="form-group">
                <button id="Register-submit" type="submit" class="btn btn-primary"><span>Register</span></button>
            </div>
        </form>
    </div>
</div>