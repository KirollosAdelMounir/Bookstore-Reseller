
@{
    ViewBag.Title = "AddNewBook";
}

<h2>Add Book</h2>

<h2>@ViewBag.messagebook</h2>
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post" action="AddNewBook" novalidate="novalidate">
            <h4>Add new Book</h4>
            <hr>

            <div class="form-group">
                <label for="BookName">Book Name</label>
                <input class="form-control" autocomplete="username" type="text"  name="BookName"  required>
                <span class="text-danger field-validation-valid" data-valmsg-for="BookName" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="BookCategory">Book Category</label>
                <select class="form-control" name="BookCategory">
                    <option>Action</option>
                    <option>Comedy</option>
                    <option>Tragedy</option>
                    <option>Computers</option>
                    <option>Maths</option>
                    <option>Science</option>
                    <option>Literature</option>
                    <option>Horror</option>
                    <option>Crime</option>
                    <option>Adventure</option>
                </select>
            </div>

            <div class="form-group">
                <label for="gender">Author:</label>
                <input type="text" name="Author" id="Author" required />
            </div>
            <div class="form-group">
                <label for="date">Date of Production</label>
                <input type="date" name="dateofproduction" id="date" required />
            </div>
            <div class="form-group">
                <label for="Price">Price</label>
                <input type="number" name="price" id="price" required />
            </div>

            <div class="form-group">
                <button id="AddBook-submit" type="submit" class="btn btn-primary"><span>Add Book</span></button>
            </div>
        </form>
    </div>
</div>